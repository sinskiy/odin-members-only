<header class="header">
  <a href="/" aria-label="home" class="styled logo">members only</a>
  <nav class="nav">
    <% if (locals.user) { %>
    <p style="padding: 0.5rem; font-weight: 500"><%= user.username %></p>
    <form action="/logout" method="post">
      <button type="submit" class="styled error" style="padding: 0.5rem 2rem">
        logout
      </button>
    </form>
    <% if (user.club_id) { %>
    <a href="/clubs/<%= user.club_id %>" class="styled"><%= user.club %></a>
    <% } %>
    <% } else { %>
    <a href="/login" class="styled">log in</a>
    <a href="/signup" class="styled">sign up</a>
    <% } %>
  </nav>
</header>
